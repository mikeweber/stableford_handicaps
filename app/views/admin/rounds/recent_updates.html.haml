- content_for :header do
  Recent rounds

%ul.col-md-12.list-group
  - @recent_round_dates.each do |date, count|
    %li.list-group-item.col-md-1= link_to("#{date.strftime('%b %d, %Y')} (#{count})", recent_updates_admin_rounds_path(occurred_on: date.strftime('%Y-%m-%d')))

%h3== Scores on #{fdate @occurred_on}

%ul.col-md-12.list-group
  - @rounds.each do |round|
    %li.list-group-item
      .col-md-1
        = handicap_movement_since_last_round(round.golfer.handicap, round.handicap)
        %span.handicap_summary= round.golfer.handicap
      .col-md-1
        %span.round_date= fdate round.occurred_on
      %span.golfer_summary= link_to(round.golfer.full_name_with_member_id, edit_golfer_path(round.golfer))

